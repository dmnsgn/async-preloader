{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022",
      "ESNext"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "strictFunctionTypes": true,
    "target": "es2022"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "web_modules", "**/*.spec.ts"]
}
